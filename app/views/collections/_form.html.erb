<% form_for(@collection) do |f| %>
<%= f.error_messages %>
<p><%= f.label :name, 'Name of your collection:' %><br/>
<%= f.text_field :name, :class => 'large thing_form_field' %></p>
<p><%= f.label :description, 'Describe what you will see in this collection:' %><br/>
<%= f.text_area :description, :cols => 40, :rows => 3 %></p>
<p><%= f.submit 'Save' %> <%= link_to 'Cancel', collections_path, :class => 'menu cancel' %></p>
<% end %>

<% javascript_tag do -%>
$('collection_name').focus();
<% end -%>